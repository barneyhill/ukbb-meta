{
  "name": "saige-step0",
  "title": "Saige Step 0 (GRM)",
  "summary": "Generate a GRM from plink files",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "delayWorkspaceDestruction" : true,
  "inputSpec": [
    {
      "name": "plink_bed",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "plink_bim",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "plink_fam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "cohort",
      "class": "string",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "GRMs",
      "label": "saige generated GRMs",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "help": ""
    }  
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/saige-step0.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x2"
        }
      }
    }
  }
}

